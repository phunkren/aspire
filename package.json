{
  "name": "aspire",
  "version": "1.0.0",
  "description": "Boilerplate project for React frontend applications",
  "repository": "https://github.com/phunkren/aspire",
  "bugs": "https://github.com/phunkren/aspire/issues",
  "author": "Andrew James <contact@ajames.dev> (https://ajames.dev)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "build": "react-scripts build",
    "build:storybook": "build-storybook -s public",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore .",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-storybook": "build-storybook -s public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn lint"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@reach/router": "^1.3.1",
    "query-string": "^6.10.1",
    "react": "^16.12.0",
    "react-axe": "^3.3.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^5.3.12",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-contexts": "^5.3.12",
    "@storybook/addon-docs": "^5.3.12",
    "@storybook/addon-info": "^5.3.12",
    "@storybook/addon-knobs": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addon-viewport": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/preset-create-react-app": "^1.5.2",
    "@storybook/react": "^5.3.12",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "modern-css-reset": "^1.1.0",
    "polished": "^3.4.4",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "typescript": "~3.7.2"
  }
}
